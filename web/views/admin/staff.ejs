<div class="mb-3">
    <h4>Staff panel</h4>

    <div class="row">
        <div class="card">
            <div class="card-body px-1">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th>Department Id</th>
                                <th>Full Name</th>
                                <th>Phone No</th>
                                <th>Profession</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i < arr.length; i++) { %>
                            <tr>
                                <td scope="row"><%= arr[i].id %></td>
                                <td><%= arr[i].branch_id %></td>
                                <td><%= arr[i].full_name %></td>
                                <td><%= arr[i].phone_no %></td>
                                <td><%= arr[i].profession %></td>
                                <td><%= arr[i].role %></td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <nav>
                    <ul class="pagination pagination-sm">
                        <% for(var i = 0; i < count; i++) { %>
                        <li class="page-item">
                            <a class="page-link <%= i == curr?'active':'' %>" href="?page=<%= i %>"><%= i + 1 %></a>
                        </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
