<div class="mb-3">
    <h4>Statistik ma'lumotlar</h4>

    <div class="row row-cols-1 row-cols-md-4 g-4">
        <% for(var i = 0;i < arr.length; i++) { %>
        <div class="col">
            <div class="card">
                <div class="card-body px-1 text-center">
                    <h1 class="card-title rounted-cricle"><%= arr[i].count %></h1>
                    <p class="card-text"><%= arr[i].name %></p>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>
