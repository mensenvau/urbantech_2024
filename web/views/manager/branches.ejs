<div class="mb-3">
    <h4>Department</h4>

    <div class="row">
        <div class="col-md-8 mb-3">
            <div class="card">
                <div class="card-body px-1">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th>Department</th>
                                    <th>Department desc</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i < arr.length; i++) { %>
                                <tr>
                                    <td scope="row"><%= arr[i].id %></td>
                                    <td><%= arr[i].branch_name %></td>
                                    <td><%= arr[i].phone_num %></td>
                                    <td>
                                        <a href="/assistant/branches?edit=<%= arr[i].id %>"><i class="lni lni-pencil-alt"></i></a>
                                        <div class="vr"></div>
                                        <a href="/assistant/<%= arr[i].id %>/employees"><i class="lni lni-line-spacing"></i></a>
                                        <div class="vr"></div>
                                        <a href="/assistant/<%= arr[i].id %>/calendar"><i class="lni lni-calendar"></i></a>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Second card (1/3 width) -->
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body px-1">
                    <form method="post">
                        <input type="hidden" name="id" value="<%= one?.id || 0 %>" />
                        <div class="mb-3">
                            <label>Bo nomi</label>
                            <input type="text" class="form-control" name="branch_name" placeholder="xyz team" value="<%= one?.branch_name %>" required />
                        </div>

                        <div class="mb-3">
                            <label>Telefon No</label>
                            <input type="text" class="form-control" name="phone_num" placeholder="+998-__-___-__-__" value="<%= one?.phone_num %>" />
                        </div>

                        <button type="submit" class="btn btn-primary">Saqlash</button>
                        <% if(one?.id>0) { %>
                        <a href="/assistant/branches/del?id=<%= one?.id %>" class="btn btn-danger">O'chirish</a>
                        <a href="/assistant/branches/reset?id=<%= one?.id %>" class="btn btn-success">Yangi parol</a>
                        <% } %>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
