<div class="mb-3">
    <h4>Employee panel</h4>

    <div class="row">
        <div class="col-md-8 mb-3">
            <div class="card">
                <div class="card-body px-1">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th>Full Name</th>
                                    <th>Phone No</th>
                                    <th>Profession</th>
                                    <th>Role</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i < arr.length; i++) { %>
                                <tr>
                                    <td scope="row"><%= arr[i].id %></td>
                                    <td><%= arr[i].full_name %></td>
                                    <td><%= arr[i].phone_no %></td>
                                    <td><%= arr[i].profession %></td>
                                    <td><%= arr[i].role %></td>
                                    <td>
                                        <a href="/manager/employees?edit=<%= arr[i].id %>">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Second card (1/3 width) -->
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body px-1">
                    <form method="post" class="px-2">
                        <input type="hidden" name="id" value="<%= one?.id || 0 %>" />
                        <div class="mb-3">
                            <label>Full Name</label>
                            <input type="text" class="form-control" name="full_name" placeholder="ex: Ali Vali" value="<%= one?.full_name %>" required />
                        </div>

                        <div class="mb-3">
                            <label>Phone No</label>
                            <input type="text" class="form-control" name="phone_no" placeholder="+998-__-___-__-__" value="<%= one?.phone_no %>" />
                        </div>

                        <div class="mb-3">
                            <label>Profession</label>
                            <input type="text" class="form-control" name="profession" placeholder="ex: Data Engineer" value="<%= one?.profession %>" />
                        </div>

                        <div class="mb-3">
                            <label for="role" class="form-label">Role</label>
                            <select name="role" id="role" class="form-select">
                                <% if(one?.role === 'manager') { %>
                                <option value="manager" selected>Manager</option>
                                <option value="employee">Employee</option>
                                <% } else { %>
                                <option value="manager">Manager</option>
                                <option value="employee" selected>Employee</option>
                                <% } %>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Save</button>
                        <% if(one?.id>0) { %>
                        <a href="/manager/employees/del?id=<%= one?.id %>" class="btn btn-danger">Delete</a>
                        <a href="/manager/employees/reset?user_id=<%= one?.user_id %>" class="btn btn-success">Reset Password</a>
                        <% } %>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
