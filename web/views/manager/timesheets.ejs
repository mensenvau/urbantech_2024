<% const days = []; const currentDate = new Date(); for (let i = 0; i < 5; i++) { const day = new Date(currentDate); day.setDate(currentDate.getDate() - i); days.unshift({ name: day.toLocaleDateString('en-US', { weekday: 'long' }), date: day.toISOString().split('T')[0].replace(/-/g, '.') }); } %>
<div class="mb-3">
    <h4>Timesheets panel</h4>

    <div class="row">
        <div class="col-md-12 mb-3">
            <div class="card">
                <div class="card-body px-1">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <% days.forEach((day, index) => { %>
                                    <th class="<%= index==4?'text-primary':'' %>"><%= day.name %> (<%= day.date %>)</th>
                                    <% }) %>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i < arr.length; i++) { %>
                                <tr>
                                    <td><%= arr[i].full_name %></td>
                                    <td><%= arr[i].day1 %>h</td>
                                    <td><%= arr[i].day2 %>h</td>
                                    <td><%= arr[i].day3 %>h</td>
                                    <td><%= arr[i].day4 %>h</td>
                                    <td><%= arr[i].day5 %>h</td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
