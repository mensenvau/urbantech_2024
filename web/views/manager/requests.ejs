<div class="mb-3">
    <h4>Request panel</h4>

    <div class="row">
        <div class="col-md-12 mb-3">
            <div class="card">
                <div class="card-body px-1">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th>Type</th>
                                    <th>Comment</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i < arr.length; i++) { %>
                                <tr>
                                    <td scope="row"><%= arr[i].id %></td>
                                    <td><%= arr[i].type %></td>
                                    <td><%= arr[i].comment %></td>
                                    <td><span class="color-<%= arr[i].status %>"><%= arr[i].status %></span></td>
                                    <td>
                                        <% if(arr[i].status=='new') { %>
                                        <a class="btn btn-sm btn-primary" href="/manager/requests/status?id=<%= arr[i].id %>&status=approve">Approve</a>
                                        <a class="btn btn-sm btn-danger" href="/manager/requests/status?id=<%= arr[i].id %>&status=reject">Reject</a>
                                        <% } else { %>
                                        <button class="btn btn-sm btn-primary" disabled>Approve</button>
                                        <button class="btn btn-sm btn-danger" disabled>Reject</button>
                                        <% } %>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
