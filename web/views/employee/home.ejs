<div class="mb-3">
    <h4>Homepage</h4>

    <div class="row row-cols-1 row-cols-md-4 g-4">
        <div class="col-lg-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between">
                    <span>Tracking</span>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-angles-right text-success me-2"></i>
                            <h6 class="mb-0">Enter</h6>
                        </div>
                        <span><%= timesheet.start_time %></span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-angles-left text-danger me-2"></i>
                            <h6 class="mb-0">Exit</h6>
                        </div>
                        <span><%= timesheet.end_time %></span>
                    </div>
                </div>

                <div class="card-footer mt-auto bg-light">
                    <% if(timesheet.start_time == null) { %>
                    <a class="btn btn-primary w-100" href="/employee/enter">Enter</a>
                    <% } else if(timesheet.end_time == null) { %>
                    <a class="btn btn-primary w-100" href="/employee/exit">Exit</a>
                    <% } else { %>
                    <button class="btn btn-primary w-100" disabled>You worked <%= timesheet.hours_worked %> hours</button>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between">
                    <span>Requests</span>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <% for(var i=0; i < requests.length; i++) { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center mb-auto">
                            <%= requests[i].type %>
                            <span class="badge color-<%= requests[i].status %> rounded-pill"><%= requests[i].status %></span>
                        </li>
                        <% } %>
                    </ul>
                </div>

                <div class="card-footer mt-auto bg-light">
                    <a class="btn btn-primary w-100" href="/employee/requests">Open All</a>
                </div>
            </div>
        </div>
    </div>
</div>
