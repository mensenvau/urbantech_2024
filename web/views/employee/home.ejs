<div class="mb-3">
    <h4>Homepage</h4>

    <div class="row row-cols-1 row-cols-md-4 g-4">
        <div class="col-lg-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between">
                    <span>Tracking</span>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-angles-right text-success me-2"></i>
                            <h6 class="mb-0">Enter</h6>
                        </div>
                        <span><%= arr.start_time %></span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-angles-left text-danger me-2"></i>
                            <h6 class="mb-0">Exit</h6>
                        </div>
                        <span><%= arr.ent_time %></span>
                    </div>

                    <% if(arr.start_time == null) { %>
                    <a class="btn btn-primary w-100" href="/employee/enter">Enter</a>
                    <% } else { %>
                    <a class="btn btn-primary w-100" href="/employee/exit">Exit</a>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between">
                    <span>Requests</span>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Vacation
                            <span class="badge bg-secondary rounded-pill">Reject</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Workday transfer
                            <span class="badge bg-secondary rounded-pill">Approve</span>
                        </li>
                    </ul>
                    <button class="btn btn-primary w-100 mt-2">Open All</button>
                </div>
            </div>
        </div>
    </div>
</div>
