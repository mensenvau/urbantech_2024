<div class="mb-3">
    <h4>Request panel</h4>

    <div class="row">
        <div class="col-md-8 mb-3">
            <div class="card">
                <div class="card-body px-1">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th>Type</th>
                                    <th>Comment</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i < arr.length; i++) { %>
                                <tr>
                                    <td scope="row"><%= arr[i].id %></td>
                                    <td><%= arr[i].type %></td>
                                    <td><%= arr[i].comment %></td>
                                    <td><span class="color-<%= arr[i].status %>"><%= arr[i].status %></span></td>
                                    <td>
                                        <a href="/employee/requests/del?id=<%= arr[i].id %>">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Second card (1/3 width) -->
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body px-1">
                    <form method="post" class="px-2">
                        <input type="hidden" name="id" value="<%= one?.id || 0 %>" />
                        <div class="mb-3">
                            <label class="form-label">Type</label>
                            <select name="type" id="type" class="form-select">
                                <% if(one?.role === 'Vacation') { %>
                                <option value="Vacation" selected>Vacation</option>
                                <option value="Workday transfer">Workday transfer</option>
                                <% } else { %>
                                <option value="Vacation">Vacation</option>
                                <option value="Workday transfer" selected>Workday transfer</option>
                                <% } %>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label>Comment</label>
                            <textarea type="text" class="form-control" name="comment" placeholder="ex: ..."><%= one?.comment %></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">Save</button>
                        <% if(one?.id>0) { %>
                        <a href="/admin/branches/del?id=<%= one?.id %>" class="btn btn-danger">Delete</a>
                        <% } %>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
